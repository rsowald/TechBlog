{{#each posts as |post|}}
<div class="card">
    <h4 class="card-header bg-info">
        <a class="text-white" href="/post/{{post.id}}">{{post.title}}</a>
    </h4>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
        <small class="text-muted">posted by {{post.user.name}} on {{formatDate post.date_created}}</small>
    </div>
</div>
{{/each}}